{
  "version": 2,
  "env": {
    "DATABASE_URL": "@DATABASE_URL",
    "JWT_SECRET": "@JWT_SECRET"
  },
  "builds": [
    {
      "src": "src/server.ts",
      "use": "@vercel/node",
      "config": {
        "maxLambdaSize": "50mb",
        "installCommand": "pnpm i",
        "buildCommand": "pnpm dlx prisma generate && pnpm prisma migrate deploy && pnpm run vercel-build"
      }
    }
  ],
 "routes": [
    {
        "src": "/api/(.*)",
        "dest": "/src/server.ts"
    },
    {
        "src": "/",
        "dest": "/src/server.ts"
    }
]
}
